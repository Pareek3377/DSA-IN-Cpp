// SUM OF AN ARRAY USING Dynamic MEMORY ALLOCATION:

#include<iostream>

using namespace std;

int getSum(int *arr,int n){
     int sum=0;
     for(int i=0;i<n;i++){
        sum+=arr[i];
     } 
     return sum;
}
int main(){
    int n;
    cin>>n;

    //Variable size array:
    int *arr=new int[n];

    //Taking input in array
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int ans=getSum(arr,n);
    cout<<"answer is :"<<ans<<endl;
    return 0;
}

//CREATING A 2D ARRAY USING DYNAMIC MEMORY ALLOCATION WHEN ROWS AND COLS ARE SAME :
#include<iostream>
using namespace std;

int main(){
    int n;
    cin>>n;
    
    //creation done
    int **arr=new int *[n];

    for(int i=0;i<n;i++){
        arr[i]=new int[n];
    }

    //Taking input
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            cin>>arr[i][j];
        }
    }
    //Taking output
    cout<<endl;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
        
    }

}

//CREATING A 2D ARRAY WHEN ROWS AND COLS ARE DIFFERENT USING DYNAMIC MEMORY ALLOCATION

#include<iostream>
using namespace std;

int main(){
  int row;
  cin>>row;

  int col;
  cin>>col;

    int ** arr=new int *[row];
    
    //creation done
    for(int i=0;i<row;i++){
        arr[i]=new int[col];
    }

    //taking input
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            cin>>arr[i][j];
        }
    }
    cout<<endl;
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            cout<<arr[i][j]<<" ";
        }cout<<endl;
    }
}
